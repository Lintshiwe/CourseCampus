rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /materials/{materialId} {
      allow read: if true;
      allow write: if request.auth != null; // Logged-in admin can perform any write operation
      allow update: if request.auth == null && request.resource.data.downloads == resource.data.downloads + 1; // Unauthenticated users can only increment downloads
    }

    match /feedback/{feedbackId} {
      allow read, delete: if request.auth != null;
      allow create: if true;
    }

    match /bug-reports/{reportId} {
        allow read, delete: if request.auth != null;
        allow create: if true;
    }

    match /social-links/{linkId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /analytics/siteStats {
        allow read: if request.auth != null;
        allow create: if request.resource.data.visits == 1;
        allow update: if 'visits' in request.resource.data && request.resource.data.size() == 1; // Only allow updating the visits field via increment

        match /dailyVisits/{day} {
            allow read: if request.auth != null;
            allow create: if request.resource.data.visits == 1;
            allow update: if 'visits' in request.resource.data && request.resource.data.size() == 1; // Only allow updating the visits field via increment
        }
    }
  }
}
